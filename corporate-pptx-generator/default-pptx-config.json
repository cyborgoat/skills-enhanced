{
  "theme": {
    "name": "Corporate Red",
    "colors": {
      "primary": "#C8102E",
      "primaryDark": "#8B0000",
      "primaryLight": "#FFE5E5",
      "secondary": "#FFB3B3",
      "accent": "#E60012",
      "background": "#FFFFFF",
      "backgroundAlt": "#FFF5F5",
      "text": {
        "dark": "#1A1A1A",
        "medium": "#4A4A4A",
        "light": "#6B6B6B",
        "onPrimary": "#FFFFFF",
        "highlight": "#C8102E"
      },
      "border": {
        "primary": "#C8102E",
        "light": "#FFB3B3",
        "dashed": "#E60012"
      }
    },
    "fonts": {
      "title": {
        "family": "Arial",
        "size": 32,
        "weight": "bold",
        "color": "text.dark"
      },
      "subtitle": {
        "family": "Arial",
        "size": 24,
        "weight": "bold",
        "color": "text.dark"
      },
      "sectionHeader": {
        "family": "Arial",
        "size": 18,
        "weight": "bold",
        "color": "text.onPrimary"
      },
      "contentHeader": {
        "family": "Arial",
        "size": 16,
        "weight": "bold",
        "color": "primary"
      },
      "body": {
        "family": "Arial",
        "size": 12,
        "weight": "normal",
        "color": "text.dark"
      },
      "caption": {
        "family": "Arial",
        "size": 10,
        "weight": "normal",
        "color": "text.medium"
      },
      "label": {
        "family": "Arial",
        "size": 11,
        "weight": "bold",
        "color": "text.dark"
      }
    }
  },
  "logo": {
    "text": "A+",
    "color": "#C8102E",
    "position": {
      "x": 0.3,
      "y": 0.3
    },
    "separator": {
      "color": "#C8102E",
      "width": 2
    }
  },
  "sectionNumber": {
    "position": "top-right",
    "background": "#C8102E",
    "textColor": "#FFFFFF",
    "format": "{section}.{subsection}",
    "width": 0.5,
    "height": 0.3
  },
  "slideLayouts": {
    "title": {
      "name": "Title Slide",
      "description": "Opening slide with large centered title",
      "elements": {
        "title": {
          "position": { "x": "10%", "y": "40%", "width": "80%", "height": "20%" },
          "font": "title",
          "alignment": "center"
        },
        "subtitle": {
          "position": { "x": "10%", "y": "60%", "width": "80%", "height": "10%" },
          "font": "subtitle",
          "alignment": "center"
        }
      }
    },
    "overview": {
      "name": "Overview/Framework Slide",
      "description": "House-shaped header with grid of categorized items below. Use for framework overviews, system architecture, or hierarchical content organization.",
      "elements": {
        "header": {
          "type": "logo-title",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "12%" }
        },
        "frameworkTitle": {
          "type": "pentagon-banner",
          "position": { "x": "20%", "y": "14%", "width": "60%", "height": "8%" },
          "background": "primaryLight",
          "font": "subtitle"
        },
        "categoryColumn": {
          "type": "vertical-flow",
          "position": { "x": "3%", "y": "24%", "width": "12%", "height": "70%" },
          "items": [
            { "type": "category-box", "background": "primary", "textColor": "onPrimary" }
          ]
        },
        "contentGrid": {
          "type": "grid",
          "position": { "x": "16%", "y": "24%", "width": "82%", "height": "70%" },
          "columns": 4,
          "itemStyle": {
            "background": "primaryLight",
            "border": "primary",
            "padding": 8
          }
        }
      }
    },
    "challenges": {
      "name": "Business Background & Challenges",
      "description": "Central summary banner with challenge items arranged around it featuring icons. Use for presenting multiple challenges, pain points, or key issues.",
      "elements": {
        "header": {
          "type": "logo-title",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "12%" }
        },
        "summaryBox": {
          "type": "rounded-box",
          "position": { "x": "5%", "y": "14%", "width": "90%", "height": "12%" },
          "background": "backgroundAlt",
          "border": "light",
          "icon": "lightbulb"
        },
        "centralBanner": {
          "type": "banner",
          "position": { "x": "15%", "y": "38%", "width": "70%", "height": "6%" },
          "background": "primary",
          "font": "sectionHeader"
        },
        "challengeItems": {
          "type": "radial-layout",
          "position": { "x": "5%", "y": "46%", "width": "90%", "height": "50%" },
          "itemCount": 5,
          "itemStyle": {
            "icon": true,
            "titleFont": "contentHeader",
            "bodyFont": "body"
          }
        }
      }
    },
    "methodology": {
      "name": "Methodology/Comparison Slide",
      "description": "Two-column layout for comparing concepts, showing dual perspectives, or presenting parallel information with diagrams.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "12%" }
        },
        "summaryBox": {
          "type": "icon-text-box",
          "position": { "x": "3%", "y": "14%", "width": "94%", "height": "10%" },
          "icon": "gear",
          "bulletStyle": "diamond"
        },
        "leftColumn": {
          "type": "section-box",
          "position": { "x": "3%", "y": "26%", "width": "46%", "height": "70%" },
          "headerBackground": "primary",
          "contentBackground": "backgroundAlt",
          "border": "primary"
        },
        "rightColumn": {
          "type": "section-box",
          "position": { "x": "51%", "y": "26%", "width": "46%", "height": "70%" },
          "headerBackground": "primary",
          "contentBackground": "backgroundAlt",
          "border": "primary"
        }
      }
    },
    "twoColumnComparison": {
      "name": "Two Column Comparison",
      "description": "Side-by-side comparison with headers and bullet points. Use for comparing metrics, features, before/after, or any dual-category content.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "12%" }
        },
        "leftPanel": {
          "type": "content-panel",
          "position": { "x": "5%", "y": "16%", "width": "43%", "height": "80%" },
          "structure": {
            "header": {
              "background": "primary",
              "font": "sectionHeader",
              "height": "8%"
            },
            "subheader": {
              "background": "backgroundAlt",
              "font": "contentHeader",
              "height": "6%"
            },
            "contentItems": {
              "type": "checklist",
              "itemBackground": "primaryLight",
              "border": "dashed",
              "checkmarkColor": "primary"
            }
          }
        },
        "rightPanel": {
          "type": "content-panel",
          "position": { "x": "52%", "y": "16%", "width": "43%", "height": "80%" },
          "structure": {
            "header": {
              "background": "primary",
              "font": "sectionHeader",
              "height": "8%"
            },
            "subheader": {
              "background": "backgroundAlt",
              "font": "contentHeader",
              "height": "6%"
            },
            "contentItems": {
              "type": "checklist",
              "itemBackground": "primaryLight",
              "border": "dashed",
              "checkmarkColor": "primary"
            }
          }
        }
      }
    },
    "detailMatrix": {
      "name": "Detail Matrix/Table Layout",
      "description": "Complex grid or matrix layout for detailed data presentation, cross-referencing, or multi-dimensional analysis.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "matrixContainer": {
          "type": "matrix",
          "position": { "x": "2%", "y": "12%", "width": "96%", "height": "85%" },
          "rowHeaders": {
            "width": "10%",
            "background": "primaryLight",
            "font": "label"
          },
          "columnHeaders": {
            "height": "6%",
            "background": "primary",
            "font": "sectionHeader"
          },
          "cells": {
            "background": "background",
            "border": "light",
            "font": "caption"
          }
        }
      }
    },
    "processFlow": {
      "name": "Process Flow Slide",
      "description": "Flowchart-style layout showing process steps, workflows, or decision trees with connected boxes.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "featureBanner": {
          "type": "feature-row",
          "position": { "x": "3%", "y": "12%", "width": "94%", "height": "6%" },
          "items": 3,
          "background": "backgroundAlt",
          "checkmarkStyle": "red"
        },
        "flowContainer": {
          "type": "flowchart",
          "position": { "x": "3%", "y": "20%", "width": "94%", "height": "75%" },
          "flowStyle": {
            "nodeBackground": "primaryLight",
            "nodeBorder": "primary",
            "arrowColor": "primary",
            "labelFont": "label"
          }
        }
      }
    },
    "horizontalProcess": {
      "name": "Horizontal Process Flow",
      "description": "Left-to-right arrow-based process showing sequential steps. Use for workflows, pipelines, or staged processes.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "processHeader": {
          "type": "header-bar",
          "position": { "x": "5%", "y": "12%", "width": "90%", "height": "5%" },
          "background": "primary"
        },
        "processRow": {
          "type": "arrow-process",
          "position": { "x": "3%", "y": "20%", "width": "94%", "height": "35%" },
          "steps": {
            "shape": "chevron",
            "background": "primaryLight",
            "textColor": "dark",
            "arrowColor": "primary"
          }
        },
        "detailsSection": {
          "type": "multi-column-content",
          "position": { "x": "3%", "y": "58%", "width": "94%", "height": "38%" },
          "columns": 5,
          "itemStyle": {
            "border": "dashed",
            "headerFont": "contentHeader",
            "bodyFont": "body"
          }
        }
      }
    },
    "multiSectionContent": {
      "name": "Multi-Section Content",
      "description": "Multiple content boxes with headers and bullet points. Use for presenting multiple topics, features, or detailed information.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "mainContent": {
          "type": "section-grid",
          "position": { "x": "3%", "y": "14%", "width": "94%", "height": "82%" },
          "layout": "flexible",
          "sectionStyle": {
            "headerBackground": "primary",
            "headerFont": "sectionHeader",
            "contentBackground": "background",
            "contentBorder": "dashed",
            "bulletStyle": "filled-circle"
          }
        }
      }
    },
    "pyramidArchitecture": {
      "name": "Pyramid/Architecture Slide",
      "description": "Pyramid or trapezoid shape at top with layered content below. Use for hierarchical systems, architecture diagrams, or layered concepts.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "pyramidShape": {
          "type": "trapezoid",
          "position": { "x": "20%", "y": "14%", "width": "60%", "height": "15%" },
          "background": "primary",
          "textColor": "onPrimary"
        },
        "layeredContent": {
          "type": "horizontal-layers",
          "position": { "x": "5%", "y": "32%", "width": "90%", "height": "60%" },
          "layers": [
            { "background": "primaryLight", "height": "20%" },
            { "background": "backgroundAlt", "height": "20%" },
            { "background": "primaryLight", "height": "20%" }
          ]
        }
      }
    },
    "twoColumnDetail": {
      "name": "Two Column Detail",
      "description": "Two main sections side by side, each with detailed sub-content. Use for dual-topic detailed presentations.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "leftSection": {
          "type": "detail-section",
          "position": { "x": "2%", "y": "12%", "width": "47%", "height": "85%" },
          "headerStyle": {
            "background": "primary",
            "font": "sectionHeader"
          },
          "contentStyle": {
            "background": "primaryLight",
            "border": "primary"
          }
        },
        "rightSection": {
          "type": "detail-section",
          "position": { "x": "51%", "y": "12%", "width": "47%", "height": "85%" },
          "headerStyle": {
            "background": "primary",
            "font": "sectionHeader"
          },
          "contentStyle": {
            "background": "primaryLight",
            "border": "primary"
          }
        }
      }
    },
    "numberedSteps": {
      "name": "Numbered Steps Layout",
      "description": "Sequential numbered steps with descriptions. Use for processes, instructions, or ordered content.",
      "elements": {
        "header": {
          "type": "logo-title-with-section",
          "position": { "x": "0%", "y": "0%", "width": "100%", "height": "10%" }
        },
        "stepsContainer": {
          "type": "numbered-sequence",
          "position": { "x": "5%", "y": "15%", "width": "90%", "height": "80%" },
          "stepStyle": {
            "numberBackground": "primary",
            "numberColor": "onPrimary",
            "numberShape": "circle",
            "contentBackground": "primaryLight",
            "arrowColor": "primary"
          }
        }
      }
    }
  },
  "visualElements": {
    "arrows": {
      "style": "filled",
      "color": "primary",
      "headStyle": "triangle"
    },
    "connectors": {
      "style": "solid",
      "color": "primary",
      "width": 2
    },
    "boxes": {
      "borderRadius": 4,
      "borderWidth": 2,
      "padding": 10
    },
    "icons": {
      "style": "outline",
      "color": "primary",
      "size": 24
    },
    "bullets": {
      "checkmark": {
        "symbol": "checkmark",
        "color": "primary"
      },
      "arrow": {
        "symbol": "triangle-right",
        "color": "primary"
      },
      "diamond": {
        "symbol": "diamond-filled",
        "color": "primary"
      },
      "circle": {
        "symbol": "circle-filled",
        "color": "primary"
      }
    }
  },
  "slideDefaults": {
    "width": 13.333,
    "height": 7.5,
    "unit": "inches",
    "marginTop": 0.3,
    "marginBottom": 0.3,
    "marginLeft": 0.3,
    "marginRight": 0.3
  }
}
